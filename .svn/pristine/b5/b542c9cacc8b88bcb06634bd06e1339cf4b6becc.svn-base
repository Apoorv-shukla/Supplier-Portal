function doSearch(term, location) {
  // console.log(term);
  var location = $("#"+term).children('a').attr("href").split("/");
  // var loc = location.split("/")
  // console.log(location);return false;
  window.location.href = 'http://localhost/supplier_portal/task/'+location[2];
}

